
:root {
	/* =~= Theme Properties =~= */
	--theme-font-family-base: system-ui;
	--theme-font-family-heading: system-ui;
	--theme-font-color-base: 0 0 0;
	--theme-font-color-dark: 255 255 255;
	--theme-rounded-base: 16px;
	--theme-rounded-container: 16px;
	--theme-border-base: 2px;
	/* =~= Theme On-X Colors =~= */
	--on-primary: 255 255 255;
	--on-secondary: 0 0 0;
	--on-tertiary: 0 0 0;
	--on-success: 255 255 255;
	--on-warning: 255 255 255;
	--on-error: 255 255 255;
	--on-surface: 0 0 0;
	/* =~= Theme Colors  =~= */
	/* primary | #010101 */
	--color-primary-50: 217 217 217; /* ⬅ #d9d9d9 */
	--color-primary-100: 204 204 204; /* ⬅ #cccccc */
	--color-primary-200: 192 192 192; /* ⬅ #c0c0c0 */
	--color-primary-300: 153 153 153; /* ⬅ #999999 */
	--color-primary-400: 77 77 77; /* ⬅ #4d4d4d */
	--color-primary-500: 1 1 1; /* ⬅ #010101 */
	--color-primary-600: 1 1 1; /* ⬅ #010101 */
	--color-primary-700: 1 1 1; /* ⬅ #010101 */
	--color-primary-800: 1 1 1; /* ⬅ #010101 */
	--color-primary-900: 0 0 0; /* ⬅ #000000 */
	/* secondary | #8BE8E5 */
	--color-secondary-50: 238 252 251; /* ⬅ #eefcfb */
	--color-secondary-100: 232 250 250; /* ⬅ #e8fafa */
	--color-secondary-200: 226 249 249; /* ⬅ #e2f9f9 */
	--color-secondary-300: 209 246 245; /* ⬅ #d1f6f5 */
	--color-secondary-400: 174 239 237; /* ⬅ #aeefed */
	--color-secondary-500: 139 232 229; /* ⬅ #8BE8E5 */
	--color-secondary-600: 125 209 206; /* ⬅ #7dd1ce */
	--color-secondary-700: 104 174 172; /* ⬅ #68aeac */
	--color-secondary-800: 83 139 137; /* ⬅ #538b89 */
	--color-secondary-900: 68 114 112; /* ⬅ #447270 */
	/* tertiary | #f95738 */
	--color-tertiary-50: 254 230 225; /* ⬅ #fee6e1 */
	--color-tertiary-100: 254 221 215; /* ⬅ #feddd7 */
	--color-tertiary-200: 254 213 205; /* ⬅ #fed5cd */
	--color-tertiary-300: 253 188 175; /* ⬅ #fdbcaf */
	--color-tertiary-400: 251 137 116; /* ⬅ #fb8974 */
	--color-tertiary-500: 249 87 56; /* ⬅ #f95738 */
	--color-tertiary-600: 224 78 50; /* ⬅ #e04e32 */
	--color-tertiary-700: 187 65 42; /* ⬅ #bb412a */
	--color-tertiary-800: 149 52 34; /* ⬅ #953422 */
	--color-tertiary-900: 122 43 27; /* ⬅ #7a2b1b */
	/* success | #607744 */
	--color-success-50: 231 235 227; /* ⬅ #e7ebe3 */
	--color-success-100: 223 228 218; /* ⬅ #dfe4da */
	--color-success-200: 215 221 208; /* ⬅ #d7ddd0 */
	--color-success-300: 191 201 180; /* ⬅ #bfc9b4 */
	--color-success-400: 144 160 124; /* ⬅ #90a07c */
	--color-success-500: 96 119 68; /* ⬅ #607744 */
	--color-success-600: 86 107 61; /* ⬅ #566b3d */
	--color-success-700: 72 89 51; /* ⬅ #485933 */
	--color-success-800: 58 71 41; /* ⬅ #3a4729 */
