	--color-surface-600: 175 175 175; /* ⬅ #afafaf */
	--color-surface-700: 146 146 146; /* ⬅ #929292 */
	--color-surface-800: 116 116 116; /* ⬅ #747474 */
	--color-surface-900: 95 95 95; /* ⬅ #5f5f5f */
}
body {
	background-image:
			radial-gradient(at 0% 0%, rgba(var(--color-secondary-300) / 0.33) 0px, transparent 50%),
			radial-gradient(at 98% 1%, rgba(var(--color-tertiary-300) / 0.33) 0px, transparent 50%);
	background-attachment: fixed;
	background-position: center;
	background-repeat: no-repeat;
	background-size: cover;
}